<%= form_with url: login_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <%= f.hidden_field :remember, value: true %>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>
